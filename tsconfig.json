{
    "compilerOptions": {
      "outDir": "./dist",              
      "module": "commonjs",        
      "target": "ES2018",    
      "strict": true,                  
      "esModuleInterop": true,         
      "skipLibCheck": true,            
      "forceConsistentCasingInFileNames": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": [
      "src/**/*"   
    ],
    "exclude": [
      "node_modules" 
    ]
  }
  